<h1>Listing kases</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kases.each do |kase| %>
      <tr>
        <td><%= link_to 'Show', kase %></td>
        <td><%= link_to 'Edit', edit_kase_path(kase) %></td>
        <td><%= link_to 'Destroy', kase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kase', new_kase_path %>
